<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="36dp">

    <TextView
        android:id="@+id/textViewTanggal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="13"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewHari"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewBulanTahun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="11/2019"
        app:layout_constraintStart_toEndOf="@+id/textViewTanggal"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewHari"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hari"
        app:layout_constraintEnd_toEndOf="@+id/textViewBulanTahun"
        app:layout_constraintStart_toStartOf="@+id/textViewBulanTahun"
        app:layout_constraintTop_toBottomOf="@+id/textViewBulanTahun" />

    <TextView
        android:id="@+id/textViewTipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="Tipe"
        app:layout_constraintBottom_toBottomOf="@+id/textViewBulanTahun"
        app:layout_constraintEnd_toStartOf="@+id/textViewJumlah"
        app:layout_constraintStart_toEndOf="@+id/textViewBulanTahun"
        app:layout_constraintTop_toTopOf="@+id/textViewBulanTahun" />

    <TextView
        android:id="@+id/textViewKategori"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kategori"
        app:layout_constraintBottom_toBottomOf="@+id/textViewHari"
        app:layout_constraintEnd_toEndOf="@+id/textViewTipe"
        app:layout_constraintStart_toStartOf="@+id/textViewTipe"
        app:layout_constraintTop_toBottomOf="@+id/textViewTipe" />

    <TextView
        android:id="@+id/textViewJumlah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="Jumlah"
        app:layout_constraintBottom_toBottomOf="@+id/textViewKategori"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textViewTipe" />
</androidx.constraintlayout.widget.ConstraintLayout>